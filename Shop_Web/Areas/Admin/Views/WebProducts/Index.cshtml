 @model IEnumerable<EntityCache.WebBussines.WebProduct>

@{
    ViewBag.Title = "لیست محصولات";
    Layout = "../Shared/_Layout.cshtml";
}

    <h2>لیست محصولات</h2>

 <p>
     <a class="btn btn-primary" href="@Url.Action("Create")">افزودن محصول جدید</a>
 </p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ImageName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img class="thumbnail" src="/Images/ProductImages/Thumb/@item.ImageName" style="width: 150px;height: 150px"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            <a class="btn btn-default btn-xs" href="@Url.Action("ProductFeatures",new {id=@item.Guid})">ویژگی های محصول</a>
            <a class="btn btn-info btn-xs" href="@Url.Action("Gallery",new {id=@item.Guid})">گالری تصاویر محصول</a>
            <a class="btn btn-warning btn-xs" href="@Url.Action("Edit",new {id=@item.Guid})">ویرایش</a>
            <a class="btn btn-danger btn-xs" href="@Url.Action("Delete",new {id=@item.Guid})">حذف</a>
        </td>
    </tr>
}

</table>
