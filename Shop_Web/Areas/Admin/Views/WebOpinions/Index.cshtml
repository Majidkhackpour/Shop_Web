@model IEnumerable<EntityCache.WebBussines.WebOpinion>

@{
    ViewBag.Title = "نظرات، انتقادات و پیشنهادات";
}

    <h2>نظرات، انتقادات و پیشنهادات</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateSh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Opinion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateSh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Opinion)
            </td>
            <td>
                <a href="@Url.Action("Delete",new {id=@item.Guid})" class="btn btn-danger btn-sm">
                    <i class="glyphicon glyphicon-trash"></i>
                </a>
            </td>
        </tr>
    }

</table>