@using System.Drawing
@using System.Web.Mvc.Html
@model IEnumerable<EntityCache.WebBussines.WebUsers>
@{
    ViewBag.Title = "مدیریت کاربران";
    Layout = "../Shared/_Def.cshtml";
}
    <h2>مدیریت کاربران</h2>

<p>
    <a class="btn btn-primary" href="@Url.Action("Create")">افزودن کاربر جدید</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RealName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RolleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateSh)
        </th>
      
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RealName)
        </td>
      
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RolleName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateSh)
        </td>
      
        <td>
            <a class="btn btn-warning btn-sm" href="@Url.Action("Edit",new {id=item.Guid})">
                <i class="glyphicon glyphicon-edit"></i>
            </a>
            <a class="btn btn-danger btn-sm" href="@Url.Action("Delete",new {id=item.Guid})">
                <i class="glyphicon glyphicon-trash"></i>
            </a>
        </td>
    </tr>
}

</table>
